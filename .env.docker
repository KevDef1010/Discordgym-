# Docker Production Environment Variables
# Diese Datei wird von docker-compose.prod.yml verwendet

# Database
DB_ROOT_PASSWORD=your-secure-root-password-2024
DB_USER=discordgym_user
DB_PASSWORD=your-secure-db-password-2024

# Redis
REDIS_PASSWORD=your-secure-redis-password-2024

# Application
JWT_SECRET=your-production-jwt-secret-256-bit-key-2024
JWT_REFRESH_SECRET=your-production-refresh-secret-256-bit-key-2024

# Monitoring
GRAFANA_PASSWORD=your-secure-grafana-password-2024

# Domains (change these to your actual domains)
API_DOMAIN=api.your-domain.com
APP_DOMAIN=app.your-domain.com
SOCKET_DOMAIN=socket.your-domain.com
METRICS_DOMAIN=metrics.your-domain.com
DASHBOARD_DOMAIN=dashboard.your-domain.com

# CORS
CORS_ORIGIN=https://app.your-domain.com

# File uploads
UPLOAD_DIR=/app/uploads
