{
  "name": "discord-gym",
  "version": "1.0.0",
  "description": "Full-Stack Angular + NestJS Application",
  "scripts": {
    "install:all": "npm run install:client && npm run install:server",
    "install:client": "cd client && npm install",
    "install:server": "cd server && npm install",
    "start": "npm-run-all --parallel start:client start:server",
    "start:4200": "npm-run-all --parallel start:client:4200 start:server",
    "start:4201": "npm-run-all --parallel start:client:4201 start:server",
    "start:4202": "npm-run-all --parallel start:client:4202 start:server",
    "start:client": "cd client && npm start",
    "start:client:4200": "cd client && npm run start:4200",
    "start:client:4201": "cd client && npm run start:4201",
    "start:client:4202": "cd client && npm run start:4202",
    "start:server": "cd server && npm run start:dev:windows",
    "start:client-only": "cd client && npm start",
    "start:dual-4200-4201": "npm-run-all --parallel start:client:4200 start:client:4201 start:server",
    "start:dual-4201-4202": "npm-run-all --parallel start:client:4201 start:client:4202 start:server",
    "start:dual-4200-4202": "npm-run-all --parallel start:client:4200 start:client:4202 start:server",
    "start:triple": "npm-run-all --parallel start:client:4200 start:client:4201 start:client:4202 start:server",
    "build": "npm run build:client && npm run build:server",
    "build:client": "cd client && npm run build",
    "build:server": "cd server && npm run build",
    "dev": "npm-run-all --parallel start:client start:server"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
