# Production Environment
NODE_ENV=production
DATABASE_URL="mysql://your-prod-db-user:your-prod-db-password@your-prod-db-host:3306/discord_gym_prod"
JWT_SECRET="your-production-jwt-secret-256-bit-key"
JWT_REFRESH_SECRET="your-production-refresh-secret-256-bit-key"

# CORS Settings
CORS_ORIGIN="https://your-frontend-domain.com"

# Socket.IO Settings
SOCKET_CORS_ORIGIN="https://your-frontend-domain.com"

# Server Port
PORT=3000

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DIR="uploads"

# SSL/Security
HTTPS=true
SECURE_COOKIES=true
